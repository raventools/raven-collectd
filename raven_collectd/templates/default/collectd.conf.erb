

Hostname "<%=@hostname %>"
FQDNLookup true
BaseDir "/var/lib/raven-collectd"
PIDFile "/var/run/raven-collectd.pid"
PluginDir "/opt/raven-collectd/lib/collectd"
TypesDB	 "/opt/raven-collectd/share/collectd/types.db"
Interval 10
ReadThreads 5



LoadPlugin network
<Plugin network>
	Server "<%=@collectd_server %>" "<%=@collectd_port %>"
</Plugin>

LoadPlugin interface
LoadPlugin syslog
LoadPlugin cpu
LoadPlugin df
LoadPlugin disk
LoadPlugin load
LoadPlugin memory
LoadPlugin processes
LoadPlugin users
LoadPlugin swap

<Plugin syslog>
	LogLevel info
</Plugin>

<Plugin cpu>
	ReportByCpu false
</Plugin>

<Plugin df>
	FSType "ext2"
	FSType "ext3"
	FSType "ext4"
	FSType "xfs"
	FSType "nfs"
</Plugin>

<Plugin interface>
	Interface "lo"
	IgnoreSelected true
</Plugin>

<Plugin disk>
	Disk "/sd.$/"
	Disk "/xvd.$/"
</Plugin>
